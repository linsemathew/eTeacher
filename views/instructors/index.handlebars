<br>
<div class="container">
	{{#if messages.message-add}}
		<div class="alert alert-info message-alert">
			{{messages.message-add}}
		</div>
	{{/if}}
	{{#if messages.message-drop}}
		<div class="alert alert-danger message-alert">
			{{messages.message-drop}}
		</div>
	{{/if}}
	{{#if messages.message-edit}}
		<div class="alert alert-warning message-alert">
			{{messages.message-edit}}
		</div>
	{{/if}}	
	{{#if messages.message-register}}
		<div class="alert alert-success message-alert">
			{{messages.message-register}}
		</div>
	{{/if}}	
	<div class="dashboard">
		<h2>Welcome {{instructor.first_name}}</h2>
		<br>
		<img src="../images/student-owl.png" class="owl">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3>Classes You Are Teaching</h3>
			</div>
			<table class="table">
				<thead>
					<tr class="info">
						<th>Class Name</th>
						<th>View Lessons</th>
						<th>Add Lesson</th>
						<th>Edit Class</th>
						<th>Delete Class</th>
					</tr>
				</thead>
				<tbody>
					{{#if instructor.classes_instructor_for}}
						{{#each instructor.classes_instructor_for}}
							<tr class="active">
								<td>{{class_id.title}}</td>
								<td><a href="/classes/{{class_id._id}}/lessons"><button type="button" class="btn btn-success">View Lessons</button></a></td>
								<td><a href="/classes/{{class_id._id}}/lessons/new"><button type="button" class="btn btn-info">Add Lesson</button></a></td>
								<td><a href="/classes/{{class_id._id}}/edit"><button type="button" class="btn btn-warning">Edit Class</button></a></td>
								<td>
									<form action="/classes/{{class_id._id}}/delete" method="post">
											<input type="hidden" name="_method" value="delete">
											<button type="submit" class="btn btn-danger">Delete Class</button>
									</form>
								</td>
							</tr>
						{{/each}}
					{{/if}}
					<tr>
						<td><a href="/classes/new"><b>Add Class</b></a></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
				</tbody>
			</table>
		</div>
		<br>
		{{#if instructor.classes}}
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3>Classes You Are Registered For</h3>
				</div>
				<table class="table">
					<thead>
						<tr class="info">
							<th>Class Name</th>
							<th>Instructor</th>
							<th>Lessons</th>
							<th>Drop</th>
						</tr>
					</thead>
					<tbody>
						{{#each instructor.classes}}
							<tr class="active">
								<td>{{class_id.title}}</td>
								<td>{{class_id.instructor}}</td>
								<td><a href="/classes/{{class_id._id}}/lessons"><button type="button" class="btn btn-success">View Lessons</button></a></td>
								<td>
									<form action="/instructors/classes/{{class_id._id}}/delete" method="post">
											<input type="hidden" name="_method" value="delete">
											<button type="submit" class="btn btn-danger">Drop Class</button>
									</form>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		{{/if}}
	</div>
</div>