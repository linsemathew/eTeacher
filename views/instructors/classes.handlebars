<div class="container">
	<h3>Classes {{instructor.first_name}} Is Teaching</h3>
	<br>
	<table class="table">
		<thead>
			<tr class="info">
				<th>Class Name</th>
				<th>View Lessons</th>
				<th>Add Lesson</th>
			</tr>
		</thead>
		<tbody>
			{{#if instructor.instructor_classes}}
				{{#each instructor.instructor_classes}}
					<tr class="active">
						<td>{{class_title}}</td>
						<td><a href="/classes/{{class_id}}/lessons">View Lessons</a></td>
						<td><a href="/instructors/lessons/new">Add Lesson</a></td>
					</tr>
				{{/each}}
			{{else}}
				<tr class="active">
					<td>You aren't teaching any classes yet. <a href="/instructors/lessons/new"><b>Click here</b></a> to create a new one.</td>
					<td></td>
					<td></td>
				</tr>
			{{/if}}
		</tbody>
	</table>

	{{#if instructor.classes}}
		<h3>Classes {{instructor.first_name}} Is Registered For</h3>
		<br>
		<table class="table">
			<thead>
				<tr class="info">
					<th>Class Name</th>
					<th>Instructor</th>
					<th>Lessons</th>
				</tr>
			</thead>
			<tbody>
				{{#each instructor.classes}}
					<tr class="active">
						<td>{{class_title}}</td>
						<td>{{class_instructor}}</td>
						<td><a href="/classes/{{class_id}}/lessons">View Lessons</a></td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{/if}}
</div>