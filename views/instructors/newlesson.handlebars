<br>
<div class="container">
    <div class="panel panel-primary" id="entire-form">
        <div class="panel-heading">
            <h2 class="form-title">New Lesson</h2>
        </div>
        <form class="signup-form" method="post" action="/instructors/classes/{{class_id}}/lessons/new">
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">
                        {{msg}}
                    </div>
                {{/each}}
            {{/if}}
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Title: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="lesson_title" placeholder="Title" value="{{lesson_title}}">
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Body: </label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="lesson_body" placeholder="Lesson body">{{lesson_body}}</textarea>
                </div>
            </div>
            <div class="form-group row panel-body submit-button">
                <button type="submit" class="btn btn-primary btn-lg btn-block">submit</button>
            </div>
        </form>
    </div>
</div>