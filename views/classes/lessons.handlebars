<br>
<div class="container">
	<div class="dashboard">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="table-heading">Lessons For {{class.title}}</h3>
			</div>
			<table class="table">
				<thead>
					<tr class="info">
						<th>Lesson Title</th>
						<th>View Lesson</th>
						{{#if instructor}}
							<th>Edit Lesson</th>
							<th>Delete Lesson</th>
						{{/if}}
					</tr>
				</thead>
				<tbody>
					{{#if class.lessons}}
						{{#each class.lessons}}
							<tr class="active">
								<td>{{lesson_id.lesson_title}}</td>
								<td><a href="/lessons/{{lesson_id._id}}"><button type="button" class="btn btn-success">View Lesson</button></a></td>
								{{#if ../instructor}}
									<td><a href="/classes/{{../class._id}}/lessons/{{lesson_id._id}}/edit"><button type="button" class="btn btn-warning">Edit Lesson</button></a></td>
									<td>  
										<form action="/classes/{{../class._id}}/lessons/{{lesson_id._id}}/delete" method="post">
											<input type="hidden" name="_method" value="delete">
											<button type="submit" class="btn btn-danger">Delete Lesson</button>
										</form>
									</td>
								{{/if}}
							</tr>
						{{/each}}
					{{/if}}
					{{#if instructor}}
						<tr class="active">
							<td><a href="/classes/{{class._id}}/lessons/new"><b>Add lesson</b></a></td>
							<td></td>
							<td></td>
							<td></td>
						</tr>
					{{/if}}
				</tbody>
			</table>
		</div>
	</div>
</div>