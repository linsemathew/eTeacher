<div class="container">
    <div class="panel panel-primary" id="entire-form">
        <div class="panel-heading">
            <h2 class="form-title">New Class</h2>
        </div>
        <form class="signup-form" method="post" action="/classes">
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">
                        {{msg}}
                    </div>
                {{/each}}
            {{/if}}
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Title: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" placeholder="Title" value="{{title}}">
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Description:&nbsp;</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="description" placeholder="Description">{{description}}</textarea>
                </div>
            </div>
            <div class="form-group row panel-body">
                <div class="form-group">
                    <label for="sel1" class="col-sm-2 col-form-label">Category:</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="category">
                            {{#each categories}}
                                <option value="{{id}}">{{title}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group row panel-body submit-button">
                <button type="submit" class="btn btn-primary btn-lg btn-block">submit</button>
            </div>
        </form>
    </div>
</div>