<div class="container">
    <div class="panel panel-primary" id="entire-form">
        <div class="panel-heading">
            <h2 class="form-title">Login</h2>
        </div>
        <form class="signup-form" method="post" action="/users/login">
            {{#if message}}
                <div class="alert alert-danger">
                    {{{ message }}}
                </div>
            {{/if}}
            <div class="form-group row panel-body instead">
                <b>New here? <a href="/users/new">Register</a> instead.</b>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Email: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="email" value="{{email}}" placeholder="Email">
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Password: </label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" value="{{password}}" name="password" id="inputEmail3" placeholder="Password">
                </div>
            </div>
            <div class="form-group row panel-body submit-button">
                <button type="submit" class="btn btn-primary btn-lg btn-block">submit</button>
            </div>
        </form>
    </div>
</div>