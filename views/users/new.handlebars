<br>
<div class="container">
    <div class="panel panel-primary" id="entire-signup-form">
        <div class="panel-heading">
            <h2 class="form-title">Signup</h2>
        </div>
        <form class="signup-form" method="post" action="/users/new">
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">
                        {{msg}}
                    </div>
                {{/each}}
            {{/if}}
            <div class="form-group row panel-body instead">
                <b>Already registered? <a href="/users/login">Login</a> instead.</b>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Account Type:</label>
                <div class="col-sm-10">
                    <label class="form-check-inline">
                        <input class="form-check-input" type="radio" id="inlineRadio1" name="type" value="student" {{#if student}}{{student}}{{/if}}> Student &nbsp;
                    </label>
                    <label class="form-check-inline">
                        <input class="form-check-input" type="radio" id="inlineRadio2" name="type" value="instructor" {{#if instructor}}{{instructor}}{{/if}}> Instructor
                    </label>
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">First Name: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="first_name" value="{{first_name}}" placeholder="First Name">
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Last Name: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{last_name}}" name="last_name" id="inputEmail3" placeholder="Last Name">
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Email: </label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" value="{{email}}" name="email" id="inputEmail3" placeholder="Email">
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Password: <br> (min 6 characters) </label>
                <div class="col-sm-10">
                    <input type="password" value="{{password}}" name="password" class="form-control" id="inputPassword3" placeholder="Password">
                </div>
            </div>
            <div class="form-group row panel-body">
                <label class="col-sm-2 col-form-label">Confirm Password: </label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword3" value="{{password2}}" name="password2" placeholder="Confirm Password">
                </div>
            </div>
            <div class="form-group row panel-body submit-button">
                <button type="submit" class="btn btn-primary btn-lg btn-block">submit</button>
            </div>
        </form>
    </div>
</div>